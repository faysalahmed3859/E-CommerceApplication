@section scripts{
    <script src="~/lib/alertify/js/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != null) {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if (save != null) {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (save != null) {
                alertify.error(del);
            }
        })
    </script>
}
