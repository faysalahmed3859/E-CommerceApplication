@using Handy.Models
@model SendMail
@{
    ViewData["Title"] = "Contact Us ";
}

<h1>@ViewBag.Message</h1>

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/Handy/css/style.css" rel="stylesheet" />
    <title>contact</title>
</head>
<body>

    <!-- nav -->
    <!-- BREADCRUMB -->
    <nav class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <!-- Breadcrumb -->
                    <ol class="breadcrumb mb-0 font-size-xs text-gray-400">
                        <li class="breadcrumb-item">
                            <a class="text-gray-400" href="index.html">Home</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Contact Us
                        </li>
                    </ol>

                </div>
            </div>
        </div>
    </nav>
    <!-- CONTENT -->
    <section class="pt-7 pb-12">
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <!-- Heading -->
                    <h3 class="mb-10 text-center">Contact Us</h3>

                </div>
            </div>
            <div class="row justify-content-between">
                <div class="col-12 col-md-4 col-xl-3">
                    <aside class="mb-9 mb-md-0">

                        <!-- Heading -->
                        <h6 class="mb-6">
                            <i class="fa fa-phone text-primary mr-4"></i> Call to Us:
                        </h6>

                        <!-- Text -->
                        <p class="text-gray-500">
                            We're available from 10 am - 10 pm EST,
                            7 days a week.
                        </p>
                        <p>
                            <strong>Customer Service:</strong><br>
                            <a class="text-gray-500" href="">6-146-389-574</a>
                        </p>
                        <p class="mb-0">
                            <strong>Careers:</strong><br>
                            <a class="text-gray-500" href="">6-146-389-574</a>
                        </p>

                        <!-- Divider -->
                        <hr>

                        <!-- Heading -->
                        <h6 class="mb-6">
                            <i class="fa fa-envelope text-primary mr-4"></i> Write to Us:
                        </h6>

                        <!-- Text -->
                        <p class="text-gray-500">
                            Fill out our form and we will contact you
                            within 24 hours.
                        </p>
                        <p>
                            <strong>Customer Service:</strong><br>
                            <a class="text-gray-500" href="">customer@example.com</a>
                        </p>
                        <p class="mb-0">
                            <strong>Careers:</strong><br>
                            <a class="text-gray-500" href="">careers@example.com</a>
                        </p>

                        <!-- Divider -->
                        <hr>

                        <!-- Heading -->
                        <h6 class="mb-6">
                            <i class="fa fa-envelope text-primary mr-4"></i> Find Us:
                        </h6>

                        <!-- Text -->
                        <p class="mb-0 text-gray-500">
                            Want to visit our Offline Stores?
                        </p>



                    </aside>
                </div>
                <div class="col-12 col-md-8">
                    <h6 class="h6 text-center">@ViewBag.Message</h6>
                    <!-- Form -->
                    <form method="post">

                        <!-- Email -->
                        <!-- Email -->
                        <div class="form-group">
                            <label class="sr-only" for="contactEmail">
                                Your Email *
                            </label>
                            <input asp-for="@Model.To" class="form-control form-control-sm" id="contactEmail" type="email" placeholder="Enter Your Email *" required="">
                            <span class="text-danger" asp-validation-for="@Model.To"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label class="sr-only" for="contactTitle">
                                Subject *
                            </label>
                            <input asp-for="@Model.Subject" class="form-control form-control-sm" id="contactTitle" type="text" placeholder="Enter Your Subject *" required="">
                            <span class="text-danger" asp-validation-for="@Model.Subject"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-7">
                            <label class="sr-only" for="contactMessage">
                                Message *
                            </label>
                            <textarea asp-for="@Model.Body" class="form-control form-control-sm" id="contactMessage" rows="5" placeholder="Enter Your Message *" required=""></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Body"></span>
                        </div>

                        <!-- Button -->
                        <input type="submit" class="btn btn-dark" value="Send Message" />


                    </form>

                </div>
            </div>
        </div>
    </section>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


</body>
</html>














