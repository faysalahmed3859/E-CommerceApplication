@using Handy.Models;
@model cloudscribe.Pagination.Models.PagedResult<Product>
@{
    ViewData["Title"] = "Home Page";
    ViewData["Controller"] = "Home";
    ViewData["Action"] = "GetAllProductByCategory";

}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Handy/css/style.css" rel="stylesheet" />
    <title>Shop</title>
</head>
<style>
    .card-actions ul li {
        display: inline-block;
    }
</style>
<body>


    <div class="col-12 col-md-12 col-lg-12">
        <div class="container">
            <!-- Header -->
            <div class="row align-items-center mb-7 mt-5">
                <div class="col-12 col-md">

                    <!-- Heading -->
                    <h3 class="mb-1">Womens' Clothing</h3>

                    <!-- Breadcrumb -->
                    <ol class="breadcrumb mb-md-0 font-size-xs text-gray-400">
                        <li class="breadcrumb-item">
                            <a class="text-gray-400" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Women's Clothing
                        </li>
                    </ol>

                </div>

            </div>

            <header class="bg-secondary py-5 mb-4">
                <div class="container px-4 px-lg-5 my-5">
                    <div class="text-center text-white">
                        <h1 class="display-4 fw-bolder">Shop in style</h1>
                        <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage </p>
                    </div>
                </div>
            </header>

        </div>
    </div>
    <div class="container">
        <div class="col-12">
            <div class="row">
                @foreach (var item in Model.Data)
                {
                    <div class="col-3">

                        <!-- Card -->
                        <div class="card mb-7">

                            <!-- Image -->
                            <div class="card-img">

                                <!-- Image -->
                                <a class="card-img-hover" asp-area="Customer" asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id">

                                    <img class="card-img-top card-img-back" src="~/@item.ImagePath" />
                                </a>

                                <!-- Actions -->
                                <div class="card-actions row">

                                    <ul class="card-action ">
                                        <li>
                                            <a asp-area="Customer" asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id">
                                                <i class="fa fa-shopping-cart btn btn-xs  btn-circle btn-white-primary">

                                                </i>
                                            </a>
                                        </li>
                                        <li>  <i class="fa fa-heart btn btn-xs  btn-circle btn-white-primary"></i></li>
                                    </ul>
                                </div>





                            </div>
                            <!-- Body -->
                            <div class="card-body px-0">

                                <!-- Category -->
                                <div class="font-size-xs">
                                    <a class="text-muted" href="shop.html">@item.Category</a>
                                </div>

                                <!-- Title -->
                                <div class="font-weight-bold">
                                    <a class="text-body" asp-area="Customer" asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id">
                                        @item.Name
                                    </a>
                                </div>

                                <!-- Price -->
                                <div class="font-weight-bold">
                                    <span class="font-size-xs text-gray-350 text-decoration-line-through">$@item.PreviousPrice</span>
                                    <span class="text-primary">$@item.AvailablePrice</span>
                                </div>

                            </div>
                        </div>



                    </div>
                }
            </div>
        </div>
    </div>

    <nav class="d-flex justify-content-center justify-content-md-center">
        <ul class="pagination pagination-sm text-gray-400">
            <div class="text-center">
                <partial name="_PaginationPartial" view-data="ViewData" model="Model" />
            </div>

        </ul>
    </nav>

    <!-- Pagination -->




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


</body>
</html>