        <!-- breadcrumb end -->
        <!-- checkout-area start -->
        <div class="checkout-area ptb-100">
            <div class="container">

                <div class="row">
                    @*<form action="#">*@
                    <form class="checkout" asp-action="Checkout" method="post" enctype="multipart/form-data">
                        <div class="col-lg-6 col-md-6">
                            <div class="checkbox-form">
                                <h3>Billing Details</h3>
                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="checkout-form-list">
                                            <input type="hidden" asp-for="Id" />
                                            <label>First Name <span class="required">*</span></label>
                                            <input asp-for="Name" type="text" placeholder="" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="checkout-form-list">
                                            <label>Last Name <span class="required">*</span></label>
                                            <input asp-for="LastName" type="text" placeholder="" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="checkout-form-list">
                                            <label>Company Name</label>
                                            <input asp-for="CompanyName" type="text" placeholder="" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="checkout-form-list">
                                            <label>Address <span class="required">*</span></label>
                                            <input asp-for="Address" type="text" placeholder="Street address" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="checkout-form-list">
                                            <label>Town / City <span class="required">*</span></label>
                                            <input asp-for="TownOrCity" type="text" placeholder="Town / City" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="checkout-form-list">
                                            <label>State / Country <span class="required">*</span></label>
                                            <input asp-for="StateOrCountry" type="text" placeholder="" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="checkout-form-list">
                                            <label>Postcode / Zip <span class="required">*</span></label>
                                            <input asp-for="PostCodeOrZip" type="text" placeholder="Postcode / Zip" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="checkout-form-list">
                                            @if (TempData["Email"] != null)
                                            {
                                                <label class=" alert-danger">@TempData["Email"]</label>
                                            }
                                            <label>Email Address </label>
                                            <input asp-for="Email" type="email" placeholder="" />
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="checkout-form-list">
                                            <label>Phone  <span class="required">*</span></label>
                                            <input asp-for="PhoneNo" type="text" placeholder="Postcode / Zip" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div>
                                <h3>Your order</h3>
                                <div>
                                    <table style="margin-top:43px">
                                        <thead>
                                            <tr>
                                                <th class="product-name">Product</th>
                                                <th class="product-total">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in products)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.Name<strong class="product-quantity"> × @item.Quantity</strong>
                                                    </td>
                                                    <td>
                                                        <span class="amount">$@(item.Quantity * item.AvailablePrice)</span>
                                                       
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>
                                        <tfoot>
                                            <tr class="cart-subtotal">
                                                <td>Cart Subtotal</td>
                                                @{var vat = @products.Sum(i => ((i.AvailablePrice * i.Quantity))) * 1 / 10;
                                                }
                                                <td><span class="amount">$@products.Sum(i => ((i.AvailablePrice * i.Quantity)))</span></td>
                                            </tr>
                                            <tr class="cart-subtotal">
                                                <td>vat</td>
                                               
                                                
                                                <td><span class="amount">$@vat</span></td>
                                            </tr>
                                            <tr class="order-total">
                                                <td>Order Total</td>
                                                <td>
                                                    <strong><span class="amount">$@products.Sum(i => (i.AvailablePrice * i.Quantity)+vat)</span></strong>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <div>
                                        <input class="Place-order-btn" type="submit" value="Place order" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
